<form bindsubmit="saveData">
  <view class="view-column" style="margin-top: 30rpx;">
    <input wx:if="{{showNowPassword}}" class="text-input" name="now_password" placeholder="输入当前密码" type="password"></input>
    <input class="text-input" name="new_password" placeholder="{{showNowPassword?'输入新密码':'输入密码'}}" type="password"></input>
    <input class="text-input" name="enter_password" placeholder="{{showNowPassword?'确认新密码':'确认密码'}}" type="password"></input>
    <button class="btn-enter" style="width:93%" formType="submit">确认提交</button>
  </view>
</form>