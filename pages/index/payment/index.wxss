.base {
  min-height: 100vh;
  width: 100%;
  background-color: #F9FBFC;
  padding:30rpx;
}

.view-back{
  display: flex;
  flex-direction: column;
  background-color: #FFFFFF;
  box-shadow: 0px 1px 4px 1px #DDD;
  padding: 30rpx 30rpx;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
}

.list {
  display: flex;
  align-items: center;
  /* border-bottom: 1rpx solid #f2f2f2; */
}

.view-gs{
  font-size: 26rpx;
  color:#333;
}

.btn-text{
  font-size: 20rpx;
  border: 1rpx solid #3CDABB;
  border-radius: 4rpx;
  padding: 5rpx 15rpx;
  color:#3CDABB;
}

.btn-text.del{
  border: 1rpx solid red;
  color:red;
}

.view-row{
  display: flex;
  flex-direction: row;
  position: relative;
  top: 8rpx;
}

.view-line{
  width: 100%;
  height: 1rpx;
  background: #f2f2f2;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
}

.list .listImg {
  width: 70rpx;
  /* height: 100rpx; */
  position: relative;
}

.listImg .point {
  width: 15rpx;
  height: 15rpx;
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  background-color: red;
  border-radius: 50%;
}

.list image {
  width: 40rpx;
  height: 40rpx;
}

.listtotal {
  flex: 1;
  margin-left: 10rpx;
}

.listTitle {
  font-size: 30rpx;
  color: black;
  font-weight: 700;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
}

.listName {
  font-size: 26rpx;
  color: #cccccc;
}

.mr-30 {
  margin-right: 30rpx;
}

.foot {
  width: 92%;
  height: 80rpx;
  /* background-color: #26a886; */
  background: -webkit-linear-gradient(left, #1DD394, #46DCCA);
  position: fixed;
  border-radius: 10rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-bottom: 50rpx;
  bottom: 0;
  left: 0;
}

.flexText {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.foot image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.add {
  text-align: center;
  line-height: 80rpx;
  color: #ffffff;
  font-size: 30rpx;
  /* font-weight: 700; */
}

.yoshop-notcont {
  display: flex;
  flex-flow: column;
  align-items: center;
  padding: 130rpx 100rpx;
  box-sizing: border-box;
}

.cont {
  font-size: 28rpx;
  color: #999;
  margin-top: 200rpx;
}

.span-flag {
  font-size: 18rpx;
  color: #FF580C;
  /* background: #FF580C; */
  border: 1rpx solid #FF580C;
  padding: 2rpx 10rpx;
  border-radius: 6rpx;
  margin-left: 15rpx;
}