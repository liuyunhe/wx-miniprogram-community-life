page {
  height: 100%
}

.special-topic {
  height: 100%;
  display: flex;
  align-items: flex-start;
  position: relative;
}

.special-topic-content {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  height: 360rpx;
  align-items: center;
  position: absolute;
  font-size: 26rpx;
  color: white;
}

.special-topic-content-left {
  margin-left: 20rpx;
  background: rgba(0, 0, 0, 0.3);
  opacity: 0.6;
  padding: 6rpx 30rpx;
  border-radius: 10rpx;
}

.special-topic-content-right {
  margin-right: 20rpx;
  background: rgba(0, 0, 0, 0.3);
  opacity: 0.6;
  padding: 10rpx 36rpx;
  border-radius: 30rpx;
}

.imagesize {
  width: 100%;
}