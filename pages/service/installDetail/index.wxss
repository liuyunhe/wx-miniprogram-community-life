.header {
  width: 100%;
  /* height: 600rpx; */
  background: #ffffff;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  padding-bottom: 20rpx;
}

.swiper {
  width: 100%;
  height: 750rpx;
}

.headerImg {
  width: 100%;
  height: 100%;
}

.headerText {
  font-size: 30rpx;
  margin-top: 20rpx;
  font-weight: 700;
  
}
.comment {
  font-size: 30rpx;
  text-align: right;
  margin-top: 20rpx;
  height: 45rpx;
}

.comment .comment-text{
  line-height: 45rpx;
  color: #999999;
  float: right;
}

.headerDerr {
  font-size: 26rpx;
  margin: 10rpx 0rpx;
}

.intro {
  font-size: 30rpx;
  /* text-indent: 2em; */
}

.content {
  margin-top: 20rpx;
  background: #ffffff;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  padding-bottom: 120rpx;
}


.foot {
  width: 100%;
  height: 100rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  background: #ffffff;
}

.footLeft {
  flex: 1;
  height: 100%;
  line-height: 100rpx;
  font-size: 28rpx;
}

.footLeft .btn {
  width: 70rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.footLeft .btn .icon {
  width: 36rpx;
  margin: 0 17rpx;
}
.footLeft .btn .btn-name {
  width: 100%;
  font-size: 20rpx;
  text-align: center;
  line-height: 34rpx;
  color: #333333;
}

.footmoney {
  font-size: 36rpx;
  color: #FF580C;
}

.color-DC2 {
  color: #FF580C;
}

.footRight {
  line-height: 100rpx;
  height: 100%;
  flex: 0.6;
  /* background: #26a886; */
  background: -webkit-linear-gradient(left, #1DD394, #46DCCA);
  text-align: center;
  color: #ffffff;
  font-size: 28rpx;
}

.address {
  font-size: 30rpx;
  margin-top: 20rpx;
}

.address image {
  width: 24rpx;
  margin-top: 4rpx;
  margin-right: 10rpx;
}
.address .addimg {
  width: 16rpx;
  margin-left: 10rpx;
  margin-top: 5rpx;
  /* float: left; */
}