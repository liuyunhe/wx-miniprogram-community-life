page {
  background-color: #efefef;
}

.header {
  width: 100%;
  /* height: 600rpx; */
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  padding-bottom: 150rpx;
}

.noData {
  height: 400rpx;
  padding-top: 350rpx;
}

.shop-name {
  height: 70rpx;
}

.shop-name text {
  float: left;
  height: 70rpx;
  line-height: 70rpx;
  margin-right: 10rpx;
  font-size: 28rpx;
  font-weight: 800;
  color: #333;
}

.check {
  width: 30rpx;
  height: 30rpx;
  float: left;
  position: relative;
  top: 50%;
  transform: translateY(-50%);
  margin-right: 10rpx;
}

.arrow {
  float: left;
  width: 10rpx;
  height: 20rpx;
  position: relative;
  top: 50%;
  transform: translateY(-50%);
}

.good-item .row {
  width: 100%;
  overflow: hidden;
  margin-bottom: 30rpx;
  border-radius: 10rpx;
}

.list_item {
  border-radius: 12rpx;
  position: relative;
  left: -120rpx;
  width: calc(100% + 120rpx);
  height: 243rpx;
}

.itmem_wrap {
  width: calc(100% - 120rpx);
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  left: 120rpx;
  z-index: 2;
  background-color: #fff;
  padding: 20rpx;
  box-sizing: border-box;
  align-items: center;
}

.itmem_wrap .check-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}

.itmem_wrap .good-img {
  width: 208rpx;
  height: 208rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.itmem_wrap .content {
  flex: 1;
  height: 208rpx;
  margin-right: 15rpx;
}

.itmem_wrap .content .title {
  height: 70rpx;
  line-height: 35rpx;
  margin-bottom: 16rpx;
  font-size: 24rpx;
  font-weight: 800;
  color: #333333;
  text-align: justify;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.itmem_wrap .content .info {
  height: 40rpx;
  display: flex;
  justify-content: space-between;
}

.itmem_wrap .content .type {
  flex: 1;
  display: flex;
}

.itmem_wrap .content .type .label {
  padding: 0 15rpx;
  height: 38rpx;
  font-size: 20rpx;
  background: #fafafa;
  line-height: 38rpx;
  text-align: center;
  border-radius: 4rpx;
  opacity: 1;
  border: 1rpx solid #e6e6e6;
  margin-right: 10rpx;
}

.itmem_wrap .content .price {
  height: 38rpx;
  font-size: 20rpx;
  line-height: 38rpx;
}

.itmem_wrap .content .total-price {
  height: 50rpx;
  font-size: 20rpx;
  line-height: 50rpx;
  color: #666666;
  display: flex;
}

.total-price .footmoney {
  font-size: 24rpx;
  color: #ff580c;
}

.total-price .head {
  font-size: 36rpx;
  color: #ff580c;
  font-weight: bold;
  line-height: 40rpx;
}

.total-price .tail {
  font-size: 20rpx;
  color: #ff580c;
  font-weight: bold;
  line-height: 50rpx;
  position: relative;
  top: 3rpx;
}

.btn-groups {
  width: 133rpx;
  height: 38rpx;
  border: 1rpx solid #f1f1f1;
  display: flex;
}

.btn-groups .goods-btn {
  display: block;
  width: 34rpx;
  height: 38rpx;
  line-height: 38rpx;
  text-align: center;
  margin: 0;
  padding: 0;
  font-size: 14rpx;
  background: none;
  border-radius: 0;
}

.btn-groups .goods-btn.btn-minus {
  color: #e1e1e1;
  border-right: 1px solid #f1f1f1;
}

.btn-groups .goods-btn.btn-add {
  color: #ff580c;
  font-size: 30rpx;
  border-left: 1px solid #f1f1f1;
}

.btn-groups .num {
  flex: 1;
  height: 38rpx;
  line-height: 38rpx;
  text-align: center;
  font-size: 20rpx;
}

.delete_wrap {
  position: absolute;
  right: 0;
  top: 0;
  width: 143rpx;
  height: 100%;
  background: -webkit-linear-gradient(left, #1dd394, #46dcca);
  display: flex;
  justify-content: flex-end;
  z-index: 1;
}

.delete_wrap .icon-delete {
  width: 30rpx;
  height: 32rpx;
}

.delete_btn {
  width: 120rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 24rpx;
}

.foot {
  width: 100%;
  height: 150rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  background: #ffffff;
  padding: 30rpx;
  box-sizing: border-box;
  z-index: 2;
}

.footLeft {
  flex: 1;
  height: 100%;
  line-height: 130rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.footLeft {
  flex: 1;
  height: 100%;
  line-height: 130rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.footLeft.check {
  width: 100rpx;
  flex: initial;
  margin-right: 20rpx;
}

.footLeft.edit {
  width: 50rpx;
  flex: initial;
  margin-right: 20rpx;
}

.footLeft.total-price {
  justify-content: flex-end;
  padding-right: 30rpx;
}

.footmoney {
  font-size: 24rpx;
  color: #ff580c;
}

.footLeft .head {
  font-size: 40rpx;
  color: #ff580c;
  font-weight: bold;
}

.footLeft .tail {
  font-size: 24rpx;
  color: #ff580c;
  font-weight: bold;
  position: relative;
  top: 8rpx;
}

.footLeft .check-all {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.footLeft .view-text {
  font-size: 24rpx;
  color: #666666;
}

.color-DC2 {
  color: #ff580c;
}

.btn-add-cart {
  line-height: 70rpx;
  width: 188rpx;
  height: 70rpx;
  /* background: #26a886; */
  text-align: center;
  color: #3cdabb;
  font-size: 28rpx;
  border-radius: 10rpx;
  align-self: center;
  border: 1px solid #3cdabb;
  box-sizing: border-box;
  margin-right: 10rpx;
}

.btn-place-orde {
  line-height: 70rpx;
  width: 188rpx;
  height: 70rpx;
  /* background: #26a886; */
  background: -webkit-linear-gradient(left, #1dd394, #46dcca);
  text-align: center;
  color: #ffffff;
  font-size: 28rpx;
  border-radius: 10rpx;
  align-self: center;
}

.btn-place-delete {
  line-height: 70rpx;
  width: 188rpx;
  height: 70rpx;
  /* background: #26a886; */
  background: -webkit-linear-gradient(left, #1dd394, #46dcca);
  text-align: center;
  color: #ffffff;
  font-size: 28rpx;
  border-radius: 10rpx;
  align-self: center;
  margin-left: auto;
}
