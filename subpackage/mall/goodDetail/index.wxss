.header {
  width: 100%;
  /* height: 600rpx; */
  background: #ffffff;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  padding-bottom: 150rpx;
}

.view-good-img {
  width: 100%;
  height: 750rpx;
  /* margin-bottom: 12rpx; */
  /* margin-top: 5rpx; */
  /* padding: 10rpx 20rpx; */
}
.good-img-swiper {
  width: 100%;
  height: 750rpx;
}

.good-img-swiper .img-swiper {
  width: 100%;
  height: 750rpx;
}

.good-img-swiper .good-img {
  width: 100%;
  height: 100%;
  /* border-radius: 10rpx; */
}

wx-swiper .wx-swiper-dot {
  position: relative;
  bottom: 24rpx;
}

.view-good-info {
  position: relative;
  border-radius: 20rpx 20rpx 0rpx 0rpx;
  top: -20rpx;
  background-color: #fff;
  padding: 20rpx 40rpx 0;
}

.headerText {
  position: relative;
  font-size: 36rpx;
  font-weight: 800;
  color: #333333;
  line-height: 42rpx;
  text-align: justify;
}

.headerText .xl {
  position: absolute;
  bottom: -5rpx;
  right: 0;
  height: 28rpx;
  line-height: 100%;
  font-size: 20rpx;
  font-family: PingFang SC-Medium, PingFang SC;
  font-weight: 500;
  color: #999999;
}

.headerDerr {
  font-size: 26rpx;
}

.headerDerr .line {
  height: 110rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.headerDerr .line:last-child {
  /* border-bottom: none; */
}

.headerDerr .line .title {
  float: left;
  width: 52rpx;
  height: 100%;
  line-height: 110rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: #999999;
  margin-right: 40rpx;
}

.headerDerr .line .info {
  float: left;
  width: 420rpx;
  height: 100%;
  line-height: 110rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
}

.headerDerr .line .jump {
  float: right;
  height: 100%;
  line-height: 110rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: #999999;
  margin-right: 10rpx;
}

.headerDerr .line .arrow {
  float: right;
  width: 10rpx;
  height: 20rpx;
  position: relative;
  top: 50%;
  transform: translateY(-50%);
}

.view-good-des {
  background-color: #f9fbfc;
  padding: 33rpx 0;
}

.view-good-des .title {
  height: 45rpx;
  font-weight: 500;
  color: #333333;
  line-height: 1;
  font-size: 32rpx;
  text-align: center;
}

.intro {
  font-size: 30rpx;
  /* text-indent: 2em; */
}

.content {
  margin-top: 20rpx;
  background: #ffffff;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.foot {
  width: calc(100% - 40rpx);
  height: 150rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  background: #ffffff;
}

.footLeft {
  flex: 1;
  height: 100%;
  line-height: 130rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.footLeft .btn {
  width: 70rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.footLeft .btn .icon {
  width: 36rpx;
  margin: 0 17rpx;
}
.footLeft .btn .btn-name {
  width: 100%;
  font-size: 20rpx;
  text-align: center;
  line-height: 34rpx;
  color: #333333;
}

.footmoney {
  font-size: 24rpx;
  color: #ff580c;
}

.footLeft .head {
  font-size: 36rpx;
  color: #ff580c;
  font-weight: bold;
}

.footLeft .tail {
  font-size: 24rpx;
  color: #ff580c;
  font-weight: bold;
}

.color-DC2 {
  color: #ff580c;
}

.btn-add-cart {
  line-height: 70rpx;
  width: 188rpx;
  height: 70rpx;
  /* background: #26a886; */
  text-align: center;
  color: #3cdabb;
  font-size: 28rpx;
  border-radius: 10rpx;
  align-self: center;
  border: 1px solid #3cdabb;
  box-sizing: border-box;
  margin-right: 10rpx;
}

.btn-place-orde {
  line-height: 70rpx;
  width: 188rpx;
  height: 70rpx;
  /* background: #26a886; */
  background: -webkit-linear-gradient(left, #1dd394, #46dcca);
  text-align: center;
  color: #ffffff;
  font-size: 28rpx;
  border-radius: 10rpx;
  align-self: center;
}

.btn-place-orde.disable{
  filter: grayscale(1);
}

.address {
  font-size: 30rpx;
  margin-top: 20rpx;
}

.address image {
  width: 40rpx;
  height: 40rpx;
}
.address .addimg {
  width: 15rpx;
  /* float: left; */
}

.rpx-40 {
  padding-left: 20rpx;
  padding-right: 20rpx;
}
