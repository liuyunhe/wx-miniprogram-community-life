.base::before {
  content: "";
  display: table;
}
.pb-150 {
  padding-bottom: 150rpx;
}
.view-status {
  height: 80rpx;
  background: #ffffff;
  border-radius: 10rpx;
  margin: 30rpx;
  box-sizing: border-box;
  box-shadow: 0rpx 4rpx 7rpx 0rpx rgba(0, 0, 0, 0.09);
}
.view-status .icon-truck {
  position: relative;
  top: -1rpx;
  width: 35rpx;
}
.view-status .text {
  flex: 1;
  height: 28rpx;
  line-height: 28rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #666666;
  line-height: 27rpx;
  margin-left: 13rpx;
}
.view-status .icon-arrow {
  width: 10rpx;
  justify-self: flex-end;
}
.addr {
  /* width: 100%; */
  height: 120rpx;
  background: #ffffff;
  border-radius: 10rpx;
  margin: 30rpx;
  box-sizing: border-box;
  box-shadow: 0rpx 4rpx 7rpx 0rpx rgba(0, 0, 0, 0.09);
}
.addr .text {
  flex: 1;
  margin-left: 10rpx;
}
.addr .fs-28 {
  font-size: 30rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
}
.addr .fs-28 .img {
  width: 20rpx;
  margin-right: 10rpx;
}
.addr .arrder {
  font-size: 26rpx;
  color: #cbcbcb;
}
.goods-list {
  background-color: #fff;
  margin: 0 30rpx 30rpx;
  box-shadow: 0rpx 2rpx 9rpx 0rpx #E8E8E8;
  border-radius: 10rpx;
}
.goods-list .row {
  width: 100%;
  overflow: hidden;
}
.goods-list .row .list_item {
  border-radius: 12rpx;
  position: relative;
  left: -120rpx;
  width: calc(100% + 120rpx);
  height: 243rpx;
}
.goods-list .row .itmem_wrap {
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  position: relative;
  padding: 24rpx 30rpx;
  box-sizing: border-box;
  align-items: center;
}
.goods-list .row .itmem_wrap .shop-name {
  width: 100%;
  height: 43rpx;
  font-size: 28rpx;
  font-weight: 800;
  line-height: 43rpx;
  color: #333333;
  margin-bottom: 13rpx;
}
.goods-list .row .itmem_wrap .shop-name image {
  width: 10rpx;
}
.goods-list .row .itmem_wrap .check-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}
.goods-list .row .itmem_wrap .good-info {
  display: flex;
  width: 100%;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}
.goods-list .row .itmem_wrap .good-info .good-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}
.goods-list .row .itmem_wrap .good-info .content {
  flex: 1;
  height: 160rpx;
  margin-right: 15rpx;
}
.goods-list .row .itmem_wrap .good-info .content .title {
  height: 70rpx;
  line-height: 35rpx;
  margin-bottom: 16rpx;
  font-size: 24rpx;
  font-weight: 800;
  color: #333333;
  text-align: justify;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}
.goods-list .row .itmem_wrap .good-info .content .info {
  height: 40rpx;
  display: flex;
  justify-content: space-between;
}
.goods-list .row .itmem_wrap .good-info .content .type {
  flex: 1;
  display: flex;
}
.goods-list .row .itmem_wrap .good-info .content .type .label {
  padding: 0 15rpx;
  height: 38rpx;
  font-size: 20rpx;
  background: #fafafa;
  line-height: 38rpx;
  text-align: center;
  border-radius: 4rpx;
  opacity: 1;
  border: 1rpx solid #e6e6e6;
  margin-right: 10rpx;
}
.goods-list .row .itmem_wrap .good-info .content .price {
  height: 38rpx;
  font-size: 20rpx;
  line-height: 38rpx;
}
.goods-list .row .itmem_wrap .good-info .content .total-price {
  height: 50rpx;
  font-size: 20rpx;
  line-height: 50rpx;
  color: #666666;
  display: flex;
}
.goods-list .row .itmem_wrap .good-info .content .total-price .footmoney {
  font-size: 24rpx;
  color: #ff580c;
}
.goods-list .row .itmem_wrap .good-info .content .total-price .head {
  font-size: 36rpx;
  color: #ff580c;
  font-weight: bold;
  line-height: 40rpx;
}
.goods-list .row .itmem_wrap .good-info .content .total-price .tail {
  font-size: 20rpx;
  color: #ff580c;
  font-weight: bold;
  line-height: 50rpx;
  position: relative;
  top: 3rpx;
}
.goods-list .row .itmem_wrap .info {
  width: 100%;
}
.goods-list .row .itmem_wrap .order-line {
  display: flex;
  width: 100%;
  flex-wrap: wrap;
  align-items: center;
  padding: 12rpx 0;
}
.goods-list .row .itmem_wrap .order-line .title {
  height: 36rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: #999999;
  line-height: 30rpx;
  margin-right: 33rpx;
}
.goods-list .row .itmem_wrap .order-line .info {
  flex: 1;
  height: 36rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: #333333;
  line-height: 30rpx;
}
.btn-groups {
  display: flex;
  justify-content: flex-end;
  flex: 1;
  margin-bottom: 20rpx;
}
.btn-groups .btn {
  width: 120rpx;
  height: 44rpx;
  border-radius: 4rpx;
  border: 2rpx solid rgba(153, 153, 153, 0.5);
  line-height: 44rpx;
  text-align: center;
  color: #000;
  font-size: 20rpx;
  margin-left: 10rpx;
}
.btn-groups .btn.main {
  border: 2rpx solid #3CDABB;
  color: #3CDABB;
}
.foot {
  width: 100%;
  height: 150rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  background: #ffffff;
  padding: 30rpx;
  box-sizing: border-box;
  z-index: 2;
}
.footLeft {
  flex: 1;
  height: 100%;
  line-height: 130rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}
.footmoney {
  font-size: 24rpx;
  color: #ff580c;
}
.footLeft .head {
  font-size: 40rpx;
  color: #ff580c;
  font-weight: bold;
}
.footLeft .tail {
  font-size: 24rpx;
  color: #ff580c;
  font-weight: bold;
  position: relative;
  top: 8rpx;
}
.footLeft .check-all {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.footLeft .view-text {
  font-size: 24rpx;
  color: #666666;
}
.btn-place-orde {
  line-height: 70rpx;
  width: 188rpx;
  height: 70rpx;
  /* background: #26a886; */
  background: -webkit-linear-gradient(left, #1dd394, #46dcca);
  text-align: center;
  color: #ffffff;
  font-size: 28rpx;
  border-radius: 10rpx;
  align-self: center;
}
